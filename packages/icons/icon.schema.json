{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "path": { "type": "string" },
    "viewBox": { "type": "string" },
    "elements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tag": { "type": "string" },
          "attrs": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          },
          "children": { "$ref": "#/properties/elements" }
        },
        "required": ["tag"]
      }
    }
  },
  "required": ["name", "path", "viewBox", "elements"]
}