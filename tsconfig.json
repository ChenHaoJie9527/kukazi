{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@your-scope/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/icons" },
    { "path": "./packages/react-icons" },
    { "path": "./packages/website" },
    { "path": "./packages/core" },
    { "path": "./packages/utils" },
    { "path": "./packages/types" },
    { "path": "./packages/scripts" }
  ],
  "exclude": ["node_modules", "**/dist"]
}